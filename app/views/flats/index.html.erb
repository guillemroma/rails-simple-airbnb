<nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Simple Airbnb</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <div class="ms-auto flex">
            <form class="flex my-2 my-lg-0">
              <input class="form-control me-2" name="query" type="search" placeholder="Search" aria-label="Search" value="">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
            <a class="btn btn-outline-primary my-2 my-sm-0 ms-2" href="/flats/new" <% link_to "Add a Flat", new_flat_path %>> Add a flat </a>
          </div>
        </div>
      </div>
</nav>

<div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>

      <p>We currently have <%= @flats.length%> available </p>
    </div>
</div>

<div class="container">
  <div class="row">
   <% @flats.each do |flat| %>
      <div class="col-lg-4 mb-4">
        <div class="card" style="width:100%">
          <img class="card-img-top" src="https://picsum.photos/200/300?random=<%=  random = rand(1..50) %>" alt="Card image">
          <div class="card-body">
            <p><strong><%= flat.name %></strong></p>
            <p><em><%= flat.address %></em></p>
            <p><%= flat.description %></p>
              <p> 🏷️ <%= flat.price_per_night %></em></p>
              <p> 🧑 <em><%= flat.number_of_guests %></em></p>
              <p> <%= link_to "More info", flat_path(flat.id) %> ||
                <%= link_to "Edit", edit_flat_path(flat.id) %> ||
                <%= link_to "Delete", flat_path(flat.id), method: :delete, data: { confirm: "Are you sure?" } %>
              </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
